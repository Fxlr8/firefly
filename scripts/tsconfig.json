{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "es2019",
        "lib": [
            "esnext"
        ],
        "outDir": "../tmp",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": [
        "**/*",
        "../src/main.d.ts"
    ]
}